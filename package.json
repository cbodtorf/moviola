{
  "name": "moviola",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "nx run-many --target=serve --projects=backend,frontend",
    "start:be": "nx serve backend",
    "start:fe": "nx serve frontend",
    "start:prod": "concurrently \"yarn start:be:prod\" \"yarn start:fe:prod\"",
    "start:be:prod": "node ./dist/apps/backend/main.js",
    "start:fe:prod": "cd ./dist/apps/frontend && npx next start",
    "build:prod": "nx run-many --target=build --prod --projects=backend,frontend,util-schemas,util-logger",
    "build:be:prod": "nx build backend --prod",
    "build:fe:prod": "nx build frontend --prod",
    "test": "nx run-many --target=test --projects=backend,frontend,util-schemas,util-logger --parallel",
    "e2e:fe": "nx e2e frontend-e2e",
    "test:be": "nx test backend",
    "test:fe": "nx test frontend",
    "test:lib": "nx test util-schemas",
    "lint": "nx run-many --target=lint --projects=backend,frontend,util-schemas,util-logger",
    "lint:be": "nx lint backend",
    "lint:fe": "nx lint frontend",
    "postinstall": "husky install",
    "precommit": "lint-staged",
    "prepush": "yarn lint -- --max-warnings=0 && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{apps,libs}/**/*.{ts,json,md,scss,html}": [
      "yarn nx affected:lint  -- --uncommitted --parallel -- --fix=true",
      "yarn nx format:write -- --uncommitted"
    ]
  },
  "private": true,
  "dependencies": {
    "@nrwl/next": "14.5.1",
    "core-js": "^3.6.5",
    "lodash": "^4.17.21",
    "next": "12.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-instantsearch-hooks-web": "^6.30.3",
    "reflect-metadata": "^0.1.13",
    "regenerator-runtime": "0.13.7",
    "rxjs": "^7.0.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@chakra-ui/icons": "^2.0.6",
    "@chakra-ui/react": "^2.2.6",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@fastify/cors": "^8.1.0",
    "@nrwl/cli": "14.5.1",
    "@nrwl/cypress": "14.5.1",
    "@nrwl/eslint-plugin-nx": "14.5.1",
    "@nrwl/jest": "14.5.1",
    "@nrwl/linter": "14.5.1",
    "@nrwl/nest": "^14.5.1",
    "@nrwl/node": "14.5.1",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/react": "14.5.1",
    "@nrwl/web": "14.5.1",
    "@nrwl/workspace": "14.5.1",
    "@testing-library/react": "13.3.0",
    "@types/axios": "^0.14.0",
    "@types/jest": "27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "16.11.7",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "algoliasearch": "^4.14.2",
    "axios": "^0.27.2",
    "babel-jest": "27.5.1",
    "concurrently": "^7.3.0",
    "cypress": "^10.2.0",
    "eslint": "~8.15.0",
    "eslint-config-next": "12.2.3",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "fastify": "^4.3.0",
    "fastify-custom-healthcheck": "^3.0.1",
    "fastify-plugin": "^4.0.0",
    "fastify-yup-schema": "^1.0.4",
    "formik": "^2.2.9",
    "framer-motion": "^6",
    "husky": "^8.0.1",
    "jest": "27.5.1",
    "lint-staged": "^13.0.3",
    "match-sorter": "^6.3.1",
    "mixpanel-browser": "^2.45.0",
    "nx": "14.5.1",
    "prettier": "^2.6.2",
    "react-test-renderer": "18.2.0",
    "sass": "1.54.0",
    "supertest": "^6.2.4",
    "ts-jest": "27.1.4",
